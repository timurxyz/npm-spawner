{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 16+, ES2020, ESM",
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2020",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "listEmittedFiles": true,
    "pretty": true,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "include": [
    "src/**/*"
  ],
}